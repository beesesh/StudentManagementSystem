@model StudentManagementSystem.Models.batch

@{
    ViewBag.Title = "Delete Batch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center text-danger mb-4">Delete Batch</h2>

        <h3 class="text-center">Are you sure you want to delete this batch?</h3>

        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.batch1)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.batch1)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.year)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.year)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-grid gap-2 mt-4">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>

            <div class="mt-3 text-center">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-link" })
            </div>
        }
    </div>
</div>
