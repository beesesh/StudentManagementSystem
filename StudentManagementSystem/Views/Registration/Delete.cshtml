@model StudentManagementSystem.Models.registration

@{
    ViewBag.Title = "Delete Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center text-danger mb-4">Delete Registration</h2>

        <h3 class="text-center">Are you sure you want to delete this?</h3>

        <div>
            <h4 class="text-primary">Registration Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayName("First Name")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.firstname)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayName("Last Name")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.lastname)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayName("NIC")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.nic)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayName("Telephone No")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.telno)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayName("Batch")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.batch.batch1)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayName("Course")
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.course.course1)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-grid gap-2 mt-4">
                    <input type="submit" value="Delete Registration" class="btn btn-danger" />
                </div>
            }

            <div class="mt-3 text-center">
                @Html.ActionLink("← Back to List", "Index", null, new { @class = "btn btn-link" })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
